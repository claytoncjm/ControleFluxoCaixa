@model IEnumerable<ControleFluxoCaixa.Models.Transaction>

@{
    ViewData["Title"] = "Lançamentos";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Novo Lançamento</a>
    <a asp-action="DailyBalance" class="btn btn-info">Balanço Diário</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Data</th>
            <th>Tipo</th>
            <th>Valor</th>
            <th>Descrição</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Date.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@(item.Type == TransactionType.Credit ? "Crédito" : "Débito")</td>
                <td>@string.Format("R$ {0:N2}", item.Amount)</td>
                <td>@item.Description</td>
            </tr>
        }
    </tbody>
</table>
